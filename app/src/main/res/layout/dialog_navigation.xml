<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/destinationOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialogCard"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Header -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                
                <ImageView
                    android:src="@drawable/ic_navigation"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="14dp"
                    app:tint="#2196F3" />
                
                <TextView
                    android:text="Navigation"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                
                <ImageButton
                    android:id="@+id/btnClose"
                    android:src="@drawable/ic_close"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="8dp"
                    app:tint="#888888" />
            </LinearLayout>

            <!-- Destination Selection -->
            <TextView
                android:text="Select destination:"
                android:textColor="#BBBBBB"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Mercado Santiago Button (only option) -->
            <Button
                android:id="@+id/btnDestMercadoSantiago"
                android:text="Mercado Santiago"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2196F3" />

            <!-- Route Info Preview (shown after selection) -->
            <LinearLayout
                android:id="@+id/routeInfoPreview"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="#2A2A2A"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    
                    <TextView
                        android:id="@+id/txtRouteDestination"
                        android:text="Mercado Santiago"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    
                    <TextView
                        android:id="@+id/txtRouteInfo"
                        android:text="Calculating route..."
                        android:textColor="#AAAAAA"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#AAAAAA"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#333333" />

                <Button
                    android:id="@+id/btnStartNavigation"
                    android:text="Start Navigation"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1.5"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
