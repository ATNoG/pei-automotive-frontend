<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAP (full width) -->
    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- WEATHER CARD (TOP LEFT) -->
    <FrameLayout
        android:id="@+id/weatherCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/card_shadow"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView 
                android:id="@+id/weatherIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_weather_rain"
                app:tint="#9EC8F5"/>
            
            <TextView
                android:id="@+id/txtTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13°"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#44FFFFFF"
                android:layout_marginHorizontal="12dp"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_wind"
                app:tint="#9EC8F5"/>

            <TextView
                android:id="@+id/txtWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

    </FrameLayout>

    <!-- NAVIGATION INSTRUCTION BANNER (shown during navigation, ABOVE nav panel) -->
    <LinearLayout
        android:id="@+id/navigationBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_shadow"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/distanceTimePanel"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Turn direction icon -->
        <ImageView
            android:id="@+id/imgManeuverIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_straight"
            android:scaleType="fitCenter"
            app:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Distance to next maneuver -->
            <TextView
                android:id="@+id/txtNextManeuverDistance"
                android:text="800 m"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Instruction text -->
            <TextView
                android:id="@+id/txtManeuverInstruction"
                android:text="Vire à direita"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM DASHBOARD CARD (Glassmorphism HUD) -->
    <FrameLayout
        android:id="@+id/bottomDashboardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/overtakingAnimationContainer"
        android:layout_margin="16dp"
        android:background="@drawable/card_shadow"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Speed Limit Circle with Red Border -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/speed_limit_circle_bg" />
                
                <TextView
                    android:id="@+id/txtSpeedLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="50"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageView 
                android:id="@+id/weatherIconBottom"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_weather_sun"
                app:tint="#FFD54F"/>
            
            <TextView
                android:id="@+id/txtTemperatureBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

            <Space 
                android:layout_width="0dp" 
                android:layout_height="1dp" 
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtCurrentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" KM/H"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"/>

            <Space 
                android:layout_width="0dp" 
                android:layout_height="1dp" 
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                
                <TextView
                    android:id="@+id/txtEta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                    
                <TextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 km"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <!-- NAVIGATION PANEL (TOP RIGHT) -->
    <FrameLayout
        android:id="@+id/distanceTimePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_shadow"
        android:padding="4dp">

        <!-- Start Route Button (shown when no route is active) -->
        <LinearLayout
            android:id="@+id/startRouteContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/btnStartRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a Route"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:background="@drawable/start_route_button_bg"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Navigation Info (shown during navigation) -->
        <LinearLayout
            android:id="@+id/navInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <!-- Arrival Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtNavArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arrival"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="#444444"
                android:layout_marginHorizontal="16dp"/>

            <!-- Distance -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtNavDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- STOP NAVIGATION BUTTON (shown during navigation, below nav panel) -->
    <FrameLayout
        android:id="@+id/stopNavContainer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/distanceTimePanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/distanceTimePanel"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btnStopNavigation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/stop_navigation_button_bg"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"/>

    </FrameLayout>

    <!-- OVERTAKING ANIMATION CARD (RIGHT MIDDLE) -->
    <FrameLayout
        android:id="@+id/overtakingAnimationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stopNavContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/card_shadow"
        android:padding="4dp">

        <FrameLayout
            android:id="@+id/overtakingAnimation"
            android:layout_width="130dp"
            android:layout_height="220dp"
            android:background="#F0121212"
            android:clipToPadding="false">

            <com.example.myapplication.TopDownCarView
                android:id="@+id/topDownCarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/overtakingWarningIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:src="@drawable/red_warning"
                android:visibility="gone"
                android:contentDescription="Overtaking warning" />

        </FrameLayout>

    </FrameLayout>

    <!-- SPEED PANEL (BOTTOM RIGHT) -->
    <FrameLayout
        android:id="@+id/speedPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_shadow"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/speed_limit_circle_bg" />
                
                <TextView
                    android:id="@+id/txtSpeedLimitRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="80"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCurrentSpeedRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 Km/h"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

    <!-- SPEED ALERT BLUR (Full screen overlay for alerts) -->
    <View
        android:id="@+id/speedAlertBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44FF0000"
        android:visibility="gone"/>

    <!-- SPEED ALERT ICON (hidden) -->
    <ImageView
        android:id="@+id/speedAlertIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- SETTINGS BUTTON (kept from original layout) -->
    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/overtakingAnimation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



