<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- MAP (full width) -->
    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- RIGHT PANEL (Modern CardView based design) -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <!-- TOP INFO BOX -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/panel_top_box"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp">

            <!-- LEFT ICON -->
            <ImageView
                android:background="@drawable/eta_flag_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:src="@drawable/check_flag"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:minWidth="40dp"
                android:minHeight="40dp" />

            <!-- SPACE BETWEEN ICON AND TEXT -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.2" />

            <!-- RIGHT TEXT COLUMN -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/txtDistance"
                    android:text="-- Km"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtEta"
                    android:text="-- Minutos"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <!-- LANE PREVIEW BOX / TOP-DOWN CAR VIEW -->
        <FrameLayout
            android:background="@drawable/panel_lane_box"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp">

            <com.example.myapplication.TopDownCarView
                android:id="@+id/topDownCarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/overtakingWarningIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:src="@drawable/red_warning"
                android:visibility="gone"
                android:contentDescription="Overtaking warning" />

        </FrameLayout>

        <!-- SPEED AREA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <!-- Red blur background for speed alert (initially invisible) -->
            <View
                android:id="@+id/speedAlertBlur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF0000"
                android:alpha="0"
                android:visibility="gone" />

            <LinearLayout
                    android:id="@+id/speedArea"
                    android:orientation="horizontal"
                    android:background="@drawable/panel_bottom_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- Speed limit circle with red border -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp">
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/speed_limit_circle_bg" />
                        
                        <TextView
                            android:id="@+id/txtSpeedLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="50"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <!-- SPEED ALERT ICON (hidden) -->
                    <ImageView
                        android:id="@+id/speedAlertIcon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <!-- Current speed (large, right side) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/txtCurrentSpeed"
                            android:text="12"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Km/h"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- WEATHER BADGE -->
    <LinearLayout
        android:id="@+id/weatherBadge"
        android:orientation="horizontal"
        android:background="@drawable/weather_bg"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weatherIcon"
            android:src="@drawable/ic_weather_rain"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtTemperature"
            android:text="11ยบ "
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- SETTINGS BUTTON -->
    <ImageView
        android:id="@+id/btnSettings"
        android:src="@drawable/ic_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>