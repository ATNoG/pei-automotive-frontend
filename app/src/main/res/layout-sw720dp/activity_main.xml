<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- MAP (full width) -->
    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- RIGHT PANEL (Modern CardView based design) -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <!-- TOP INFO BOX / NAVIGATION PANEL -->
        <FrameLayout
            android:background="@drawable/panel_top_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp">

            <!-- START ROUTE BUTTON (shown when no route active) -->
            <LinearLayout
                android:id="@+id/startRouteContainer"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/btnStartRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start a Route"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/start_route_button_bg"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

            <!-- NAVIGATION INFO (shown during navigation) - Same structure as old project -->
            <LinearLayout
                android:id="@+id/navInfoContainer"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone">

                <!-- Left: Arrival Time -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtNavArrival"
                        android:text="--:--"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="arrival"
                        android:textColor="#888888"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#404040"
                    android:layout_marginHorizontal="12dp" />

                <!-- Right: Distance -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtNavDistance"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="km"
                        android:textColor="#888888"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- STOP NAVIGATION BUTTON (shown during navigation, between top panel and lane preview) -->
        <FrameLayout
            android:id="@+id/stopNavContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="6dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btnStopNavigation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                android:background="@drawable/stop_navigation_button_bg"
                android:padding="12dp"
                android:scaleType="fitCenter"
                app:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"/>

        </FrameLayout>


        <!-- LANE PREVIEW BOX / TOP-DOWN CAR VIEW -->
        <FrameLayout
            android:background="@drawable/panel_lane_box"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp">

            <com.example.myapplication.TopDownCarView
                android:id="@+id/topDownCarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/overtakingWarningIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:src="@drawable/red_warning"
                android:visibility="gone"
                android:contentDescription="Overtaking warning" />

        </FrameLayout>

        <!-- SPEED AREA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Red blur background for speed alert (initially invisible) -->
            <View
                android:id="@+id/speedAlertBlur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF0000"
                android:alpha="0"
                android:visibility="gone" />

            <LinearLayout
                    android:id="@+id/speedArea"
                    android:orientation="horizontal"
                    android:background="@drawable/panel_bottom_speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- Speed limit circle with red border -->
                    <FrameLayout
                        android:id="@+id/speedLimitContainer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="12dp">
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/speed_limit_circle_bg" />
                        
                        <TextView
                            android:id="@+id/txtSpeedLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="--"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <!-- SPEED ALERT ICON (hidden) -->
                    <ImageView
                        android:id="@+id/speedAlertIcon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp" />

                    <!-- Current speed (large, right side) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/txtCurrentSpeed"
                            android:text="12"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtSpeedUnit"
                            android:text="Km/h"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="4dp" />
                    </LinearLayout>
                </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- WEATHER BADGE -->
    <LinearLayout
        android:id="@+id/weatherBadge"
        android:orientation="horizontal"
        android:background="@drawable/weather_bg"
        android:padding="8dp"
        android:layout_margin="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/weatherIcon"
            android:src="@drawable/ic_weather_rain"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtTemperature"
            android:text="11ยบ"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Wind Section -->
        <LinearLayout
            android:id="@+id/windSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:background="#44FFFFFF"
                android:layout_marginHorizontal="16dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_wind"
                app:tint="#9EC8F5"/>

            <TextView
                android:id="@+id/txtWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

</LinearLayout>

    <!-- NAVIGATION INSTRUCTION BANNER (shown during navigation) -->
    <!-- Positioned to the right of weather badge -->
    <LinearLayout
        android:id="@+id/navigationBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_shadow"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/weatherBadge"
        app:layout_constraintBottom_toBottomOf="@id/weatherBadge"
        app:layout_constraintStart_toEndOf="@id/weatherBadge">

        <!-- Turn direction icon - larger -->
        <ImageView
            android:id="@+id/imgManeuverIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_straight"
            android:scaleType="fitCenter"
            app:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Distance to next maneuver - larger text -->
            <TextView
                android:id="@+id/txtNextManeuverDistance"
                android:text="800 m"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Instruction text - larger -->
            <TextView
                android:id="@+id/txtManeuverInstruction"
                android:text="Vire ร direita"
                android:textColor="#BBBBBB"
                android:textSize="16sp"
                android:maxLines="2"
                android:maxWidth="300dp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- SETTINGS BUTTON -->
    <ImageView
        android:id="@+id/btnSettings"
        android:src="@drawable/ic_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>